<div id="container_p">
  <div class="d-flex justify-content-around row">
    <div class="col-11 col-sm-8 col-md-6">
      <h2 style="text-align: center; padding: 20px">Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form>
          <% if alert.present? %>
            <p class="alert has-background-white">
              <% if alert == 'Invalid Email or password.' %>
                Email ou mot de passe incorrect
              <% else %>
                <%= alert %>
              <% end %>
            </p>
          <% end %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class:"input", placeholder:"Mot de passe" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit " Se connecter", class:"btn btn-outline-dark" %>
          </div>
        </form>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
