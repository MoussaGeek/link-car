<div id="container_p">
  <div class="d-flex justify-content-around row">
    <div class="col-11 col-sm-8 col-md-6">
      <h2 style="text-align: center; padding: 20px">Inscription</h2>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <form>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"input", placeholder:"Nom" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"Email" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caract√®res au minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder:"Mot de passe" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", placeholder:"Confirmation mot de passe" %>
          </div>

          <div class="actions">
            <%= f.submit "S'inscrire", class:"btn btn-outline-dark" %>
          </div>
        </form>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
