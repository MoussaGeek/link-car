<div id="container_p">
   <div class="notice">
      <% if flash[:notice] %>
         <div class="alert alert-success alert-dismissible show fade">
            <%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert">
               <span>&times;</span>
            </button>
         </div>
      <% end %>
   </div>  
   <div style="text-align: center; padding-top: 40px;"><h1>Liste des utilisateurs</h1></div>
   <div class="container" >
      <div class="row">
         <% @users.all.each do |user| %>
            <div class="col-12 col-sm-12 col-md-6 my-3">
               <section class="card bg-light text-dark" id="card-hover">
                  <div class="card-body">
                     <p class="d-flex justify-content-around">Nom: <%= user.name %></p>
                     <p class="d-flex justify-content-around">Email: <%= user.email %></p>
                     <p class="d-flex justify-content-around">Administrateur: <%= user.admin? ? 'Oui' : 'Non' %></p>
                     <span class="d-flex justify-content-around"> 
                        <%= button_to 'Modifier', edit_user_path(user), method: :get, class: "btn btn-gray" %>
                        <%= button_to 'Supprimer', user, method: :delete, data: {confirm: "ÃŠtes-vous sÃ»r?" }, class: "btn btn-danger custom-button" %>              
                     </span>
                  </div>
               </section>
            </div>
         <% end %>
      </div>
   </div>
   <div class="d-flex justify-content-center"><%= paginate @users %></div>
</div>
