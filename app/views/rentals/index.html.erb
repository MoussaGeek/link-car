<div id="container_p">
  <p id="notice"><%= notice %></p>

  <h1>Rentals</h1>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Prix de Location</th>
          <th>Dur√©e</th>
          <th>Destination</th>
          <th>Name client</th>
          <th>Car_Rental numero_matricule</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rentals.each do |rental| %>
          <tr>
            <td><%= rental.date %></td>
            <td><%= rental.time %></td>
            <td><%= number_to_currency(rental.car.price_rental, unit: 'F CFA') %></td>
            <td><%= pluralize(rental.duration, "jour") %></td>
            <td><%= rental.destination %></td>
            <td><%= rental.user.name %></td>
            <td><%= rental.car.numero_matricule %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Show', rental %></td>
              <td><%= link_to 'Modifier', edit_rental_path(rental) %></td>
              <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td><%= link_to 'Show', rental %></td>
              <td><%= link_to 'Back', cars_path %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>