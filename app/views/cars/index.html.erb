<div id="container_p">
<p id="notice"><%= notice %></p>

<div style="text-align: center; padding-top: 40px;"><h1>Liste des Voitures</h1></div>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Numero matricule</th>
      <th>Marque</th>
      <th>Modele</th>
      <th>Carburant</th>
      <th>Price rental</th>
      <th>Disponible</th>
      <th>Car type</th>
      <th>Annee</th>
      <th>Parking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= image_tag car.photo.variant(resize_to_limit: [100, 100]) if car.photo.attached? %></td>
        <td><%= car.numero_matricule %></td>
        <td><%= car.marque %></td>
        <td><%= car.modele %></td>
        <td><%= car.carburant %></td>
        <td><%= car.price_rental %></td>
        <td><%= car.disponible %></td>
        <td><%= car.car_type %></td>
        <td><%= car.annee %></td>
        <td><%= car.parking.name %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Back', cars_path(car), method: :get %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
