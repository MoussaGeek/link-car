<div id="container_p">
<div style="text-align: center; padding-top: 40px;"><h1>Creation de voiture</h1></div>
  <%= form_with(model: @car) do |form| %>
    <% if @car.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

        <ul>
          <% @car.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="card mb-3 my-3 mx-auto" style="max-width: 80%; padding: 10px">
        <div class="row gutters">
          <div class="col-md-6">
            <div class="field">
            <%= form.label :numero_matricule %>
            <%= form.text_field :numero_matricule %>
            </div>
      
            <div class="field">
              <%= form.label :marque %>
              <%= form.text_field :marque %>
            </div>
      
            <div class="field">
              <%= form.label :price_rental %>
              <%= form.number_field :price_rental %>
            </div>
      
            <div class="field">
              <%= form.label :modele %>
              <%= form.text_field :modele %>
            </div>
      
            <div class="field">
              <%= form.label :annee %>
              <%= form.number_field :annee %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card-body">
            <div class="field">
            <%= form.label :carburant %>
            <%= form.text_field :carburant %>
            </div>
        
            <div class="field">
              <%= form.label :car_type %>
              <%= form.text_field :car_type %>
            </div>
        
            <div class="field">
              <%= form.label :photo %>
              <%= form.file_field :photo %>
            </div>
        
            <div class="field">
              <%= form.label :parking_id %>
              <%= form.collection_select :parking_id, Parking.all, :id, :name, { prompt: "SeclectionnÃ© le parking" } %>
            </div>
          
            <div class="actions">
              <%= form.submit "Submit", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>