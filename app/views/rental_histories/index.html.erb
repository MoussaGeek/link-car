<div id="container_p">
  <div class="container">
    <h1>Liste de l'historique des locations</h1>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nom du client</th>
          <th>Date</th>
          <th>Heure</th>
          <th>Prix de la location</th>
          <th>Durée</th>
          <th>Destination</th>
          <th>Numéro de matricule du véhicule</th>
          <th>Nom du chauffeur</th>
        </tr>
      </thead>
      <tbody>
        <% @rental_histories.each do |history| %>
          <tr>
            <td><%= history.name %></td>
            <td><%= history.date %></td>
            <td><%= history.time %></td>
            <td><%= number_to_currency(history.price, unit: ' F CFA ') %></td>
            <td><%= pluralize(history.duration, 'jour') %></td>
            <td><%= history.destination %></td>
            <td><%= history.car_matricule %></td>
            <td><%= history.chauffeur %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center"><%= paginate @rental_histories %></div>
</div>